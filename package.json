{
  "devDependencies": {
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3"
  },
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "scripts": {
    "build": "tailwindcss build -i ./src/input.css -o ./src/output.css",
    "watch": "tailwindcss build -i ./src/input.css -o ./src/output.css --watch"
  }
}